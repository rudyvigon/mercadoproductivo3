# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Configuración de la aplicación
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Flags de funcionalidades
# Frontend
NEXT_PUBLIC_FEATURE_CHAT_V2_ENABLED=true
# Backend
FEATURE_CHAT_V2_ENABLED=true

# Configuración de autenticación
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret
# Mercado Pago (suscripciones)
MP_ACCESS_TOKEN=your-mercadopago-access-token
MP_WEBHOOK_SECRET=your-mercadopago-webhook-secret
MP_WEBHOOK_ALLOW_TESTS=true

# Pusher (tiempo real)
# Server-side
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=your-pusher-cluster
# Client-side
NEXT_PUBLIC_PUSHER_KEY=your-public-pusher-key
NEXT_PUBLIC_PUSHER_CLUSTER=your-public-pusher-cluster

# Cloudflare Turnstile (CAPTCHA)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# Configuración de correo (DEPRECADA)
# EMAIL_SERVER=smtp://username:password@smtp.example.com:587
# EMAIL_FROM=noreply@example.com
